{
  "name": "digitalstars/php-mtproto-client",
  "description": "PHP client library for the Telegram MTProto API",
  "license": "MIT",
  "type": "library",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "homepage": "https://github.com/digitalstars/php-mtproto-client",
  "keywords": [
    "php",
    "async",
    "telegram",
    "mtproto",
    "api",
    "telegram-api",
    "protocol",
    "library",
    "wrapper",
    "sdk",
    "client",
    "userbot",
    "authorization"
  ],
  "require": {
    "php-64bit": ">=8.2",
    "ext-openssl": "*",
    "phpseclib/phpseclib": "^3.0",
    "amphp/sync": "^2.3",
    "amphp/socket": "^2.3",
    "revolt/event-loop": "^1.0"
  },
  "suggest": {
    "ext-ffi": "Для максимальной производительности при создании ключа авторизации (использует скомпилированный C++ модуль).",
    "ext-gmp": "Install the gmp extension to speed up authorization",
    "ext-bcmath": "Install the bcmath extension to speed up authorization",
    "ext-openssl": "Install the openssl extension for faster crypto"
  },
  "autoload": {
    "psr-4": {
      "ProtoBrick\\MTProtoClient\\": "src/"
    }
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.85",
    "phpunit/phpunit": "^11",
    "vlucas/phpdotenv": "^5.6"
  },
  "scripts": {
    "test": "phpunit -c phpunit.xml.dist",
    "test:unit": "phpunit -c phpunit.xml.dist --testsuite Unit",
    "test:integration": "phpunit -c phpunit.xml.dist --testsuite Integration"
  }
}
